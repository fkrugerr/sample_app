<% if signed_in? %>
<div class="row">
  <aside class="col-xs-12 col-sm-5 col-md-3">
    <section>
      <%= render 'shared/user_info' %>
    </section>
    <section>
    	<%= render 'shared/micropost_form' %>
    </section>
  </aside>
  <div class="col-xs-12 col-sm-7 col-md-9">
  	<h3>Micropost Feed</h3>
    <%= render 'shared/feed' %>
  </div>
</div>
<% else %>
<div class="jumbotron">
  <h1 class="text-center">Welcome to the Sample App</h1>

  <p class="text-center">
    This is the home page for the
    <a href="http://railstutorial.org/">Ruby on Rails Tutorial</a>
    sample application.
  </p>

  <p class="text-center"><%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %></p>
</div>

<p class="text-center"><%= link_to image_tag("rails.png", alt: "Rails"), 'http://rubyonrails.org/' %></p>
<% end %>