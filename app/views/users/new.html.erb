<% provide(:title, 'Sign up') %>
<h1 class="text-center">Sign up</h1>
<div class="row">
	<div class="col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
		<%= form_for(@user) do |f| %>

			<%= render "fields", f: f %>

			<%= f.button "Create my account", type: "submit", name: "commit", class: "btn btn-primary btn-lg" %>

		<% end %>
	</div>
</div>