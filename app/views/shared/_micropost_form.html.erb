<%= form_for(@micropost) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="form-group">
    <%= f.text_area :content, class: "form-control", rows: "3", placeholder: "Compose new micropost..." %>
  </div>
  <%= f.button "Post", type: "submit", name: "submit", class: "btn btn-primary" %>
<% end %>